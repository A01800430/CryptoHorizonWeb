<%- include('../partials/header') %>
<body>
  <div class="menu-container">
    <%- include('../partials/navbar') %>
  </div>

  <main class="container mt-5">
    <h2 class="text-primary mb-4">All Users</h2>

    <table class="table table-hover table-striped">
      <thead class="table-dark">
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Country</th>
          <th>Device</th>
          <th>Language</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr onclick="window.location.href='/dashboard/users/<%= user.id %>'" style="cursor: pointer;">
            <td><%= user.userName %></td>
            <td><%= user.email %></td>
            <td><%= user.country %></td>
            <td><%= user.deviceModel %></td>
            <td><%= user.systemLanguage %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

<%- include('../partials/footer') %>
</body>
