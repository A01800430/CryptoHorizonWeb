<main class="py-4 px-3 px-sm-4 px-md-5 px-xl-5">

  <!-- Header del dashboard -->
  <div class="mb-4">
    <h1 class="fw-bold text-primary">Dashboard Overview</h1>
    <p class="text-muted ">Welcome, <%= username %></p>
  </div>

  <!-- KPIs principales -->
  <% const kpi = [
