<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Librería AOS para animaciones al hacer scroll -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init({
    duration: 600,        // duración de la animación
    once: true,           // se ejecuta solo una vez
    easing: 'ease-out'    // tipo de movimiento
  });
</script>

<!-- Lógica del botón para activar/desactivar modo oscuro -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const themeToggleBtn = document.getElementById('themeToggle');
    const body = document.body;

    // Si ya hay tema oscuro guardado, activarlo
    if (localStorage.getItem('theme') === 'dark') {
      body.classList.add('dark-mode');
    }

    // Alternar entre modo claro y oscuro al hacer clic
    if (themeToggleBtn) {
      themeToggleBtn.addEventListener('click', () => {
        body.classList.toggle('dark-mode');
        const theme = body.classList.contains('dark-mode') ? 'dark' : 'light';
        localStorage.setItem('theme', theme);
      });
    }
  });
</script>

<!-- jQuery y Select2 (para campos select mejorados) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Inicializa Select2 para el selector de país
    $('#countrySelect').select2({
      placeholder: 'Select a country',
      width: '100%'
    });

    // Obtener datos del sistema del usuario y guardarlos en campos ocultos
    document.getElementById("systemLanguage").value = navigator.language || "unknown";
    document.getElementById("platform").value = navigator.platform || "unknown";
    document.getElementById("operatingSystem").value = navigator.userAgent || "unknown";
  });
</script>

