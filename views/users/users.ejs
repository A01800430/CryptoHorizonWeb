<%- include('../partials/header') %>

<body>
  <!-- Navbar superior -->
  <div class="menu-container">
    <%- include('../partials/navbar') %>
  </div>

  <!-- Contenido principal -->
  <main class="container mt-5">
    <!-- Título de la página -->
    <h2 class="text-primary mb-4">All Users</h2>

    <!-- Tabla de usuarios registrados -->
    <table class="table table-hover table-striped">
      <thead class="table-dark">
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Country</th>
          <th>Device</th>
          <th>Language</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <!-- Cada fila es clickeable y lleva al perfil individual del usuario -->
          <tr onclick="window.location.href='/users/users/<%= user.id_usuario %>'" style="cursor: pointer;">
            <td><%= user.userName %></td>
            <td><%= user.email %></td>
            <td><%= user.country %></td>
            <td><%= user.deviceModel %></td>
            <td><%= user.systemLanguage %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>
</body>
