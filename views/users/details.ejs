<%- include('../partials/header') %>

<body>
  <!-- Navbar superior -->
  <div class="menu-container">
    <%- include('../partials/navbar') %>
  </div>

  <!-- Contenido principal del perfil de usuario -->
  <main class="container mt-5">
    <!-- Encabezado del perfil con nombre de usuario -->
    <h2 class="text-primary mb-3">User Profile: <%= user.userName %></h2>

    <!-- Tarjeta con la informaci칩n b치sica del usuario -->
    <div class="card p-4 mb-4">
      <h5 class="mb-2">Informaci칩n b치sica</h5>
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Country:</strong> <%= user.country %></p>
      <p><strong>Gender:</strong> <%= user.gender || "N/A" %></p>
      <p><strong>Device:</strong> <%= user.deviceModel %></p>
      <p><strong>System Language:</strong> <%= user.systemLanguage %></p>
    </div>

    <!-- Tabla de sesiones del usuario -->
    <h5 class="mb-3">Sesiones registradas:</h5>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Start</th>
          <th>End</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody>
        <% sessions.forEach(s => { %>
          <tr>
            <td><%= s.startTime %></td>
            <td><%= s.endTime %></td>
            <td><%= Math.floor(s.duration_seconds / 60) %> min</td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>
</body>
