<!-- Estilos y scripts de GridStack + Chart.js -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gridstack@9.4.0/dist/gridstack.min.css" />
<script src="https://cdn.jsdelivr.net/npm/gridstack@9.4.0/dist/gridstack-all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Estilos personalizados -->
<style>
  body {
    background-color: var(--bg-light);
    transition: background-color 0.3s ease;
  }
  body.dark-mode {
    background-color: var(--bg-dark);
    color: var(--text-light);
  }
  .grid-stack-item-content {
    background-color: #fff;
    border-radius: 8px;
    padding: 10px;
    box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    overflow: hidden;
  }
  body.dark-mode .grid-stack-item-content {
    background-color: #1e1e1e;
    color: #f1f1f1;
  }
  #trash {
    background-color: rgba(255, 0, 0, 0.2);
    padding: 15px;
    border-radius: 8px;
    text-align: center;
    color: #ff0000;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  body.dark-mode #trash {
    background-color: rgba(255, 80, 80, 0.25);
    color: #ffaaaa;
    border: 1px solid rgba(255, 80, 80, 0.3);
  }
  .grid-stack {
    border: 2px dashed #ccc;
    background-color: #f8f9fa;
    min-height: 600px;
    border-radius: 10px;
    transition: background-color 0.3s ease;
  }
  body.dark-mode .grid-stack {
    background-color: #1c1c1c;
    border-color: #444;
  }
  .sidepanel-item {
    background-color: #fff;
    border: 1px solid #ccc;
    padding: 8px;
    border-radius: 6px;
    text-align: center;
    cursor: grab;
  }
  body.dark-mode .sidepanel-item {
    background-color: #2a2a2a;
    border-color: #555;
    color: var(--text-light);
  }
  .intro-text {
    color: #6c757d;
  }
  body.dark-mode .intro-text {
    color: #ccc;
  }

  /* âœ… Asegura que el canvas se ajuste bien dentro del widget */
  .grid-stack-item-content canvas {
    width: 100% !important;
    height: 100% !important;
    object-fit: contain;
  }
</style>

